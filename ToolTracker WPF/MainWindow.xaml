<Window x:Class="ToolTracker_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolTracker_WPF"
        xmlns:viewmodel="clr-namespace:ToolTracker_WPF.ViewModels"
        xmlns:view="clr-namespace:ToolTracker_WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/title.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:ToolViewModel}">
            <view:ToolView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:LevelViewModel}">
            <view:LevelView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:GameViewModel}">
            <view:GameView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:TitleViewModel}">
            <view:TitleView/>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <DockPanel>
            <Menu HorizontalAlignment="Center" Margin="0,0,0,20">
                <Menu.Background>
                    <SolidColorBrush Opacity="0"/>
                </Menu.Background>
                <MenuItem Header="Games" Command="{Binding ShowGameViewCommand}" Padding="10,10,10,10" Background="White" />
                <Separator Visibility="Hidden"/>
                <MenuItem Header="Tools" Command="{Binding ShowToolViewCommand}" Padding="10,10,10,10" Background="White"/>
                <Separator Visibility="Hidden"/>
                <MenuItem Header="Levels" Command="{Binding ShowLevelViewCommand}" Padding="10,10,10,10" Background="White"/>
            </Menu>
        </DockPanel>
        <ContentControl Content="{Binding CurrentView}"/>
    </StackPanel>
</Window>
